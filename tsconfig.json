{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6", "dom"],
    "types": ["jest", "cypress", "cypress-xpath", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["cypress/pages/*"],
      "@modal/*": ["cypress/modal/*"]
    }
  },
  "include": ["cypress/**/*.ts", "tests/**/*.ts"]
}